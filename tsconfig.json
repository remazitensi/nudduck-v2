{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@libs/*": ["libs/*"],
      "@apps/*": ["apps/*"],
      "@entity/*": ["libs/entity/src/*"],
      "@api/*": ["apps/api/src/*"]
    },
    "outDir": "./dist",
    "types": ["jest"]
  },
  "include": ["apps/**/*", "libs/**/*", "test/**/*"],
  "exclude": ["dist"]
}
